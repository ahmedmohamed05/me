---
import type { Tech } from "../content/skills";
import CTAButton from "./CTAButton.astro";
import ImageSlider from "./ImageSlider.astro";

interface Props {
  title: string;
  description: string;
  images: string[];
  link?: string;
  repo: string;
  technologies: Tech[];
}

const { title, description, images, link, repo, technologies } = Astro.props;
---

<article class="work-card">
  <div class="image-container">
    <ImageSlider images={images} title={title} description={description} />
  </div>
  <div class="content">
    <h3>{title}</h3>
    <p>{description}</p>
    <div class="buttons">
      {link && <CTAButton ref={link} type="bg-casal" text="Live Site" />}
      <CTAButton ref={repo} type="bg-empty" text="Repository" />
    </div>
    <ul class="flex items-center gap-6 flex-wrap mt-4">
      {
        technologies.map((item, index) => {
          const delay = index * 100;
          return (
            <li
              class="flex items-center gap-1 border-[1px] fade-in-element p-1 rounded shadow-md"
              style={`transition-delay: ${delay}ms`}
            >
              <img
                src={item.icon}
                alt={`${item.name} icon`}
                class="w-9 aspect-square"
              />
              <span class="text-lg">{item.name}</span>
            </li>
          );
        })
      }
    </ul>
  </div>
</article>

<style>
  .work-card {
    background-color: var(--off-white);
    border: 2px solid var(--black);
    border-radius: 0.5rem;
    overflow: hidden;
    transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 3px 3px 0px rgba(0, 0, 0, 0.2);
  }

  @media (hover) {
    .work-card:is(:hover, :focus) {
      transform: translateY(-3px);
      box-shadow: 5px 5px 0px rgba(0, 0, 0, 0.2);
    }
  }

  .image-container {
    width: 100%;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .image-container img {
    object-fit: contain;
    transition: transform 300ms ease;
  }

  .work-card:hover .image-container img {
    transform: scale(1.05);
  }

  .content {
    padding: 1.5rem;
  }

  h3 {
    font-size: 2rem;
    font-weight: bold;
    color: var(--black);
  }

  p {
    font-size: 1.4rem;
    line-height: 1.5;
    color: var(--casal);
    margin-bottom: 1rem;
  }

  .buttons {
    margin-block-start: 1.5rem;
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
</style>
