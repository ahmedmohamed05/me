---
interface Props {
  name: string;
  url: string;
  icon: string;
}

const { name, url, icon } = Astro.props;
---

<a class="link" href={url} target="_blank" rel="noopener noreferrer">
  <img src={icon} alt={`${name} icon`} class="w-6 h-6" />
  <span>{name}</span>
</a>

<style>
  .link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    border-radius: 0.5rem;
    padding: 0.75rem 1.25rem;
    background-color: var(--casal);
    color: var(--off-white);
    transition: all 0.3s ease;
  }

  .link:hover {
    transform: translateY(-3px);
    box-shadow:
      0 4px 6px -1px rgb(0 0 0 / 0.1),
      0 2px 4px -2px rgb(0 0 0 / 0.1);
  }

  @media (max-width: 768px) {
    .link {
      width: 100%;
      justify-content: center;
    }
  }

  img {
    filter: invert(89%) sepia(30%) saturate(480%) hue-rotate(313deg)
      brightness(108%) contrast(101%);
  }
</style>
