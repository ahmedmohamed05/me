---
import "../styles/skeleton-loading.css";
import SkeletonBtn from "./SkeletonBtn.astro";
import SkeletonTechItems from "./SkeletonTechItems.astro";
import SkeletonText from "./SkeletonText.astro";
---

<article class="skeleton__work-card">
  <slot />
  <div class="skeleton skeleton-image"></div>

  <div class="content p-5">
    <SkeletonText size="large" />
    <SkeletonText size="medium" />

    <div class="buttons my-7 flex gap-1.5">
      <SkeletonBtn />
      <SkeletonBtn />
    </div>

    <SkeletonTechItems technologiesCount={3} />
  </div>
</article>

<style>
  .skeleton__work-card {
    padding: 0.5rem;
    background-color: var(--off-white);
    border: 2px solid var(--black);
    border-radius: 0.5rem;
    overflow: hidden;
    transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 3px 3px 0px rgba(0, 0, 0, 0.2);
  }
</style>
